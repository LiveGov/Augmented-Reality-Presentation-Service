<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#55ff0000" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Metaio"
        android:layout_gravity="right"
        android:textColor="#ccc" />
    
    <LinearLayout
        android:id="@+id/lltarget"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_stroke"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:padding="20dp" 
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llaract"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:background="#33B5E5">

        <ToggleButton
            android:id="@+id/bt_ToggleInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:checked="false"
            android:enabled="false"
            android:textColor="#33B5E5"
            android:background="@drawable/whitebutton"
            android:textOff="@string/threeD"
            android:textOn="@string/billboard"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/bt_ChangeModel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Shift model"
            android:background="@drawable/whitebutton"
            android:textColor="#33B5E5"
            android:visibility="invisible"/>

        
        <Button
            android:id="@+id/bt_Recognize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Recon"
            android:textColor="#33B5E5"
            android:visibility="gone" />
        
         <Button
            android:id="@+id/bt_ToggleType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/whitebutton"
            android:text="@string/scan"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#33B5E5" />
    </LinearLayout>

    

    <RelativeLayout
        android:id="@+id/rlShake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="55dp"
        >
        
        <ImageView
            android:id="@+id/imvShake"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shake"
            android:visibility="invisible" />

    	<TextView
        android:id="@+id/tvShake"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/shake"
        android:textColor="#33B5E5"
        android:gravity="center"
        android:layout_below="@id/imvShake"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>
    
</FrameLayout>