<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#0F0" />
            <stroke
                android:width="0dp"
                android:color="#171717" />
            <corners
                android:radius="3dp" />
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFF"
                android:endColor="#FFF"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#171717" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>